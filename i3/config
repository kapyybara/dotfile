# target                 title     bg    text   indicator  border
client.focused           $pink     $base $text  $rosewater $pink
client.focused_inactive  $mauve    $base $text  $rosewater $mauve
client.unfocused         $mauve    $base $text  $rosewater $mauve
client.urgent            $peach    $base $peach $overlay0  $peach
client.placeholder       $overlay0 $base $text  $overlay0  $overlay0
client.background        $base

bar {
		font pango:  JetBrainsMono Nerd Font 6
		status_command i3blocks -c ~/.config/i3/i3blocks.conf
	    	position top 
            #i3bar_command i3bar --transparency
		    #tray_output primary
		    tray_padding 2

            strip_workspace_numbers yes
            mode dock 
            #strip_workspace_name yes 

		    colors {
		        separator          $purple
		        background         $base
		        statusline         $white
        #       Target            	border 		        bg		txt		    indicator
	    	    focused_workspace	$pink   	   	 	$mantle	$pink	    $pink
	    	    #active_workspace	$pink   	   	 	$mantle	$pink	    $pink
	    	    inactive_workspace	$overlay1 	   	 	$base	$subtext1   $pink
	    #	    urgent_workspace	$urgentred	    	$urgentred	$white		$purple
	        }
}

