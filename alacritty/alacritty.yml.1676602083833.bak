import:
  # Set font
  - ~/.config/alacritty/fonts/jetbrains.yml
  # - ~/.config/alacritty/themes/nord.yml
  # ~/.config/alacritty/themes/catppuccin-mocha.yml

window:
  padding:
    x: 4
    y: 4

  dynamic_padding: false
  decorations: none
  opacity: 0.95

font:
  size: 12
  draw_bold_text_with_bright_colors: true

key_bindings:
  - {
      key: Return,
      mods: Control|Shift,
      action: SpawnNewInstance
    }

colors:
  # Default colors
  primary:
    background: '0x22272e'
    foreground: '0x768390'

  # Normal colors
  normal:
    black: '0x22272e'
    red: '0xff938a'
    green: '0x6bc46d'
    yellow: '0xc69026'
    blue: '0x6cb6ff'
    magenta: '0xb083f0'
    cyan: '0x56d4dd'
    white: '0x768390'

  # Bright colors
  bright:
    black: '0x636e7b'
    red: '0xff938a'
    green: '0x6bc46d'
    yellow: '0xdaaa3f'
    blue: '0x6cb6ff'
    magenta: '0xdcbdfb'
    cyan: '0x56d4dd'
    white: '0x768390'

  indexed_colors:
    - { index: 16, color: '0xd18616' }
    - { index: 17, color: '0xff938a' }
theme: github_dimmed
